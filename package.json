{
  "name": "hugo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev:frontend": "pnpm --filter frontend dev",
    "build:frontend": "pnpm --filter frontend build",
    "lint:frontend": "pnpm --filter frontend lint",
    "test:frontend": "pnpm --filter frontend test",
    "secrets:check": "gitleaks protect --staged --verbose --config=.gitleaks.toml",
    "secrets:scan": "gitleaks detect --verbose --config=.gitleaks.toml",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  }
}
